# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build dashboard`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3002 -t dashboard`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3002

WORKDIR /app

RUN addgroup --system dashboard && \
    adduser --system -G dashboard dashboard

COPY dist/apps/dashboard dashboard
RUN chown -R dashboard:dashboard .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix dashboard --omit=dev -f install

CMD [ "node", "dashboard" ]
