# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build form`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t form`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3003

WORKDIR /app

RUN addgroup --system form && \
    adduser --system -G form form

COPY dist/apps/form form
RUN chown -R form:form .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix form --omit=dev -f install

CMD [ "node", "form" ]
