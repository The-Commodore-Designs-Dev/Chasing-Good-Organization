# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build shell`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t shell`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system shell && \
          adduser --system -G shell shell

COPY dist/apps/shell shell
RUN chown -R shell:shell .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix shell --omit=dev -f install

CMD [ "node", "shell" ]
