# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build webapp`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t webapp`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3001

WORKDIR /app

RUN addgroup --system webapp && \
    adduser --system -G webapp webapp

COPY dist/apps/webapp webapp
RUN chown -R webapp:webapp .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix webapp --omit=dev -f install

CMD [ "node", "webapp" ]
